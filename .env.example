# Frontend Environment Configuration
# Copy this file to .env.local for local development

# Base URL for the backend API server
# In production, this should point to your Render backend
VITE_API_BASE_URL=http://localhost:8080

# Example production URL:
# VITE_API_BASE_URL=https://your-backend.onrender.com

# =============================================================================
# Supabase Auth Configuration (for protected routes)
# Get these from Supabase Dashboard → Settings → API
# =============================================================================

# Supabase Project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anon/public key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# Development Settings
# =============================================================================

# Use mock API (for GitHub Pages demo without backend)
VITE_USE_MOCK_API=false

# Disable auth requirement (testing only, NEVER in production)
# VITE_DISABLE_AUTH=true
