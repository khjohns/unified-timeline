# API Configuration for POC Backend
# Copy this file to .env.local for local development

# Base URL for the backend API server
# In production, this should point to your ngrok tunnel or deployed backend
VITE_API_BASE_URL=http://localhost:8080/api

# Example ngrok URL (when running backend locally with ngrok tunnel):
# VITE_API_BASE_URL=https://your-subdomain.ngrok.io/api

# Example production URL:
# VITE_API_BASE_URL=https://your-backend.render.com/api
