                "value": "{{csrf_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sakId\": \"{{test_sak_id}}\",\n  \"pdfData\": \"\",\n  \"filename\": \"test-koe.pdf\",\n  \"catendaTopicId\": \"00000000000000000000000000000000\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/upload-pdf",
              "host": ["{{base_url}}"],
