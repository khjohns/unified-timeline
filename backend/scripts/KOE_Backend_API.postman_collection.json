      ]
    },
    {
      "name": "7. Security Tests",
      "item": [
        {
          "name": "Webhook - Invalid Secret (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404 or 403', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([404, 403]);",
                  "});",
                  "",
                  "pm.test('Webhook security is working', function () {",
                  "    // Should not allow access with invalid secret",
                  "    pm.expect(pm.response.code).to.not.equal(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"topic_created\",\n  \"topic_id\": \"test-topic-123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/webhook/catenda/invalid-secret-token",
              "host": ["{{base_url}}"],
              "path": ["webhook", "catenda", "invalid-secret-token"]
            },
            "description": "Test webhook security - should reject invalid secret"
          }
        },
        {
          "name": "Submit Without CSRF Token (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 403', function () {",
                  "    pm.response.to.have.status(403);",
                  "});",
                  "",
                  "pm.test('CSRF protection is working', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sakId\": \"TEST\",\n  \"formData\": {}\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/varsel-submit",
              "host": ["{{base_url}}"],
              "path": ["api", "varsel-submit"]
            },
            "description": "Test CSRF protection - should reject requests without token"
          }
        }
      ]
    }
  ]
}
