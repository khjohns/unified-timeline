    },
    {
      "name": "6. PDF Upload",
      "item": [
        {
          "name": "Upload PDF to Catenda",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Response is JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
